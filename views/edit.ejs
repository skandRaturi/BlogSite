<%- include("partials/header.ejs") %>
<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>
    <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST" class="ui form">
        <div class="feild" >
            <label for="title">Title: </label>
            <input type="text" name="blog[title]" value="<%= blog.title %>">    
        </div>
        <div class="feild">
            <label for="IMAGE">Image-url:</label>
            <input type="url" name="blog[image]"  value="<%= blog.image %>">
        </div>
        <div class="feild">
            <label for="discription">Blog Content:</label>
            <textarea name="blog[description]"><%= blog.description %></textarea>
        </div>
        <div>
           <input class="ui big violet basic button" type="submit">
        </div>
    </form>
</div>

